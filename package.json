{
  "name": "monorepo-poc",
  "devDependencies": {
    "concurrently": "^5.1.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5"
  },
  "scripts": {
    "install-all": "concurrently 'yarn frontend-install' 'yarn backend-install'",
    "start:dev": "concurrently 'yarn frontend:dev' 'yarn backend:dev' 'yarn dynamo'",
    "frontend:dev": "PORT=3000 BACKEND_PORT=4000 yarn --cwd frontend start:dev",
    "frontend-install": "yarn --cwd frontend install",
    "backend:dev": "PORT=4000 DYNAMO_PORT=8000 yarn --cwd backend start:dev",
    "backend-install": "yarn --cwd backend install",
    "dynamo": "docker-compose -f docker-compose-dynamodb-local.yaml up"
  },
  "dependencies": {
    "npm": "^6.14.5"
  }
}
